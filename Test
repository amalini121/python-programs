# 4.
a = int(input("enter number1 "))

b = int(input("enter number2 "))

c = int(input("enter number3 "))


if a>b and a>c:

    print ("a is greater")

elif b>a and b>c:

    print ("b is greater")

else:

    print ("c is greater")

#****************************************************************************************************************************
#6.factorial

n=6
fact=1
for a in range(1,n+1):
        fact=fact*a
print(fact)

