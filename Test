# 1.zero is neutral

i = int(input("Enter number "))

if i>0:
    print ("positive integer")

elif i<0:
    print ("negitive integer")
    
else:
    print ("number is zero")

#******************************************************************************************************************
# 2.if a number is divisible by 2 with 0 remainder, then it is even, otherwise odd.

i = int(input("Enter number "))


if i%2 == 0:

    print ("even")

else:

    print ("odd")

#**************************************************************************************************************************
#3.leap year

year = int(input("Enter a year: "))

if (year % 4) == 0:

   if (year % 100) == 0:

       if (year % 400) == 0:

           print("leap year")

       else:

            print("not a leap year")

   else:

        print("leap year")
else:

    print("not a leap year")

